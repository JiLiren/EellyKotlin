<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_4"
    android:layout_marginLeft="@dimen/dimen_2"
    android:layout_marginRight="@dimen/dimen_2"
    android:layout_marginBottom="@dimen/dimen_6"
    app:cardElevation="@dimen/dimen_4"
    app:cardMaxElevation="@dimen/dimen_8"
    app:cardCornerRadius="@dimen/dimen_8"
    app:cardBackgroundColor="@color/color_white">

    <LinearLayout
        android:id="@+id/mClickLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/mPosterIv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_240"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_load_default"/>

        <TextView
            android:id="@+id/mNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_8"
            android:textSize="@dimen/text_15"
            android:singleLine="true"
            android:textColor="@color/text_1"/>

        <com.eelly.widget.XRatingBar
            android:id="@+id/mRateRb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginTop="@dimen/dimen_6"
            android:layout_marginLeft="@dimen/dimen_8"
            app:starCount="5"
            app:halfstart="true"
            app:starEmpty="@drawable/ic_stars_null"
            app:starFill="@drawable/ic_stars_full"
            app:starHalf="@drawable/ic_stars_progress"
            app:starImageHeight="@dimen/dimen_16"
            app:starImageWidth="@dimen/dimen_16"
            app:starImagePadding="@dimen/dimen_4"/>

        <TextView
            android:id="@+id/mActorTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_12"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginLeft="@dimen/dimen_8"
            android:textColor="@color/text_default"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/mDirectorTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginBottom="@dimen/dimen_12"
            android:textSize="@dimen/text_12"
            android:layout_marginLeft="@dimen/dimen_8"
            android:textColor="@color/text_default"
            android:singleLine="true"/>

    </LinearLayout>

</android.support.v7.widget.CardView>

