<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4"
        android:layout_marginLeft="@dimen/dimen_2"
        android:layout_marginRight="@dimen/dimen_2"
        android:layout_marginBottom="@dimen/dimen_6"
        app:cardElevation="@dimen/dimen_4"
        app:cardMaxElevation="@dimen/dimen_8"
        app:cardCornerRadius="@dimen/dimen_8"
        app:cardBackgroundColor="@color/color_white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mPosterIv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@mipmap/ic_menu_header"/>

            <TextView
                android:id="@+id/mNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8"
                android:layout_marginTop="@dimen/dimen_8"
                android:text="王的故事"
                android:textSize="@dimen/text_15"
                android:textColor="@color/text_default"/>

            <RatingBar
                android:id="@+id/mRateRb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="2.5"
                android:stepSize="0.5"
                android:layout_marginTop="@dimen/dimen_6"
                android:layout_marginLeft="@dimen/dimen_8"
                android:isIndicator="false"
                android:numStars="5"/>

            <TextView
                android:id="@+id/tv_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_12"
                android:text="演员：xxx/xxx/xxx/xxx/xxx/xxx/"/>

        </LinearLayout>




    </android.support.v7.widget.CardView>

</LinearLayout>

